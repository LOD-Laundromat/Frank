                exit 1
                ;;
                
             
            -d|--downloadUri)
                resource=false;
                ;;
            -r|--resourceUri)
                download=false;
                ;;
            --)              # End of all options.
                shift
                break
                ;;
            -?*)
                printf 'WARN: Unknown option (ignored): %s\n' "$1" >&2
                ;;
            *)               # Default case: If no more options then break out of the loop.
